<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Asegúrate de enlazar tu archivo de estilos -->

    <style>
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #666666, #FFFFFF);
            background-size: cover;
            z-index: -1; 
        }

        .form-container {
            background-color: rgba(255, 255, 255, 0.5); 
            border-radius: 0.8rem;
            padding: 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-container input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-top: 5px;
        }

        .form-container label {
            font-weight: bold;
            display: block;
            margin-top: 10px;
            text-transform: uppercase;
            color: #666;
        }

        .btn-submit {
            width: 100%;
            background-color: #1d6eb9;
            color: white;
            font-weight: bold;
            padding: 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
        }

        .btn-submit:hover {
            background-color: #2a9183;
        }

        .error-message {
            background-color: #e74c3c;
            color: white;
            text-align: center;
            padding: 10px;
            margin-bottom: 10px;
            font-weight: bold;
            border-radius: 5px;
        }

        .links {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .links a {
            font-size: 12px;
            color: #555;
            text-decoration: none;
        }

        .links a:hover {
            text-decoration: underline;
        }

        .container {
            max-width: 400px;
            margin: 50px auto;
            text-align: center;
        }

        img {
            width: 100%;
            max-width: 200px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Take a Brake</h1>
        <h2>Inicio de Sesión</h2>


        <div class="form-container">

            <form action="/auth/registro" method="POST">

                
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" placeholder="Ingresa tu nombre" required>

                <label for="email">Correo Electrónico</label>
                <input type="email" name="email" placeholder="Ingresa tu correo electrónico" required>

                <label for="password">Contraseña</label>
                <input type="password" name="password" placeholder="Ingresa tu contraseña" required>

                <button type="submit" class="btn-submit">Iniciar Sesión</button>

                <div class="links">
                    <a href="/auth/registro">¿No tienes cuenta? Crear una</a>
                    <a href="/auth/olvide-password">¿Olvidaste tu contraseña?</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Simulación de errores dinámicos
        const errores = []; // Aquí se cargarían los errores desde el backend
        const errorContainer = document.getElementById("error-container");

        if (errores.length > 0) {
            errores.forEach(error => {
                const errorMsg = document.createElement("div");
                errorMsg.classList.add("error-message");
                errorMsg.innerText = error;
                errorContainer.appendChild(errorMsg);
            });
        }
    </script>

</body>
</html>
